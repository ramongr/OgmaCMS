    <% @top_sidebars.each do |sidebar| %>
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <h1><a href="#"><%= sidebar.title %></a></h1>
          </li>
           <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <% sidebar.links.each do |link| %>
              <li><%= link_to link.title, link.url_with_protocol() %></li>
            <% end %>
          </ul>

          <!-- Left Nav Section -->
          <ul class="left">
            <% sidebar.static_pages.each do |static_page| %>
              <li><%= link_to static_page.title, [:admin,static_page] %></li>
            <% end %>
          </ul>
        </section>
      </nav>
    <% end %>

    <!-- Search -->
    <li class="has-form">
      <div class="row collapse">
        <div class="large-8 small-9 columns">
          <%= form_tag search_index_path, method: :get do %>
            <p>
              <%= text_field_tag :search, params[:search] %>              
            </p>
        </div>
        <div class="large-4 small-3 columns">
          <%= submit_tag "Search", name: nil, class: 'alert button expand' %>
        </div>
      </div>
    </li>
    <% end %>

    <div class="row">
      <div class="medium-3 columns">
        <% @left_sidebars.each do |sidebar| %>
          <h3><%=sidebar.title%></h3>
          <p> Links </p>
          <ul class="side-nav">
            <% sidebar.links.each do |link| %>
              <li><%= link_to link.title, link.url_with_protocol() %></li>
            <% end %>
          </ul>

          <p> Internal Pages </p>
          <ul class="side-nav">
            <% sidebar.static_pages.each do |static_page| %>
              <li><%= link_to static_page.title, [:admin,static_page] %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <div class="medium-6 columns">
        <%= yield :content %>
      </div>

      <div class="medium-3 columns">
        <% @right_sidebars.each do |sidebar| %>
          <div class="row">
          <div class="medium-3 push-9 columns">
            <h3><%=sidebar.title%></h3>
            <p> Links </p>
            <ul class="side-nav">
              <% sidebar.links.each do |link| %>
                <li><%= link_to link.title, link.url_with_protocol() %></li>
              <% end %>
            </ul>

            <p> Internal Pages </p>
            <ul class="side-nav">
              <% sidebar.static_pages.each do |static_page| %>
                <li><%= link_to static_page.title, [:admin,static_page] %></li>
              <% end %>
            </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>

    <% @bottom_sidebars.each do |sidebar| %>
      <footer class="row">
        <div class="large-12 columns">
          <hr>
          <div class="row">
            <div class="large-6 columns">
              <ul class="inline-list left">
                <% sidebar.static_pages.each do |static_page| %>
                  <li><%= link_to static_page.title, [:admin,static_page] %></li>
                <% end %>
              </ul>
              <br/>
            </div>
            <div class="large-6 columns">
              <ul class="inline-list right">
                <% sidebar.links.each do |link| %>
                  <li><%= link_to link.title, link.url_with_protocol() %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </footer>
    <% end %>


    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>
