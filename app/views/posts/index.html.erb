<br>
<div class="row">
  <% if can? :create, Post %>
    <%= link_to t('posts.name'), admin_posts_path, class: "button small" %>
    <%= link_to t('posts.index.public.new'), new_admin_post_path, class: "button small" %>
  <% end %>

  <div class="small-12">
    <% unless @posts.empty? %>
      <% @posts.each do |post| %>
        <h3 class="text-center"><%= link_to post.title, post %></h3>
        <hr>
        <%= post.user.name %><br>
        <%= t('posts.attributes.created_at') %>: <%= l post.created_at %><br>
        <% if post.created_at != post.updated_at %>
          <%= t('posts.attributes.updated_at') %>: <%= l post.updated_at %><br>
        <% end %>
        <hr>
        <p><%= post.content.truncate(1550).html_safe %></p>
        <%= link_to t('common.read_more'), post, class: "button tiny" %>
        <hr>
        <% if can? :update, post %>
          <%= link_to t('common.edit'), edit_admin_post_path(post), class: "button tiny" %>
          <% if can? :destroy, post %>
            <%= link_to t('common.destroy'), [:admin,post], method: :delete, data: { confirm: t('common.confirm') }, class: "button tiny alert" %>
          <% end %>
        <% end %>
        <br>
      <% end %>
    <% end %>

    <div class="apple_pagination">
      <%= will_paginate @posts %>
    </div>
    <br>
  </div>
</div>