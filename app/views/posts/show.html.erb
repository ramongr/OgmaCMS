<p id="notice"><%= notice %></p>

<div class="post">
  <div class="title">
    Title: <%= @post.title %>
  </div>
  <div class="author">
    Author: <%= @post.user.email %>
  </div>
  <div class="created_updated">
    Created at: <%= @post.date_created_human %>
    Updated at: <%= @post.date_updated_human %>
  </div>
  <div class="content">
    <%= @post.content %>
  </div>
  <%= link_to 'Add Comment', new_comment_path(post_id: @post.id) %>
  <p></p>
  <%= link_to 'Back', posts_path %>
</div>