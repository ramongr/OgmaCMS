<p id="notice"><%= notice %></p>

<div class="post">
  <div class="title">
    Title: <%= @post.title %>
  </div>
  <div class="author">
    Author: <%= @post.user.email %>
  </div>
  <div class="created_updated">
    Created at: <%= @post.date_created_human %>
    Updated at: <%= @post.date_updated_human %>
  </div>
  <div class="content">
    <%= @post.content %>
  </div>
  <div class="comments">
    <% unless @postcomments.empty? %>
      <% @postcomments.each do |comment| %>
        <div class="user">
          <%= comment.user.email %>
        </div>
        <div class="created_updated">
          Created at: <%= comment.date_created_human %>
          Updated at: <%= comment.date_updated_human %>
        </div>
        <div class="content">
          <%= comment.content %>          
          <% if current_user == comment.user %>
            <td><%= link_to 'Edit', edit_comment_path(comment, post_id: @post.id) %></td>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to 'Add Comment', new_comment_path(post_id: @post.id) %>
  <p></p>
  <%= link_to 'Back', posts_path %>
</div>