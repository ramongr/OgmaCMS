<div class="row">
  <%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

  <h2 class="text-center"><%= t("forem.post.new") %></h2>
  <div class="small-9">
    <% if @reply_to_post %>
      <%= render 'reply_to_post', :post => @reply_to_post %>
    <% else %>
      <em><%= @topic.subject %></em>
    <% end %>
    <hr>
    <%= simple_form_for [forem, @topic.forum, @topic, @post] do |f| %>
      <div class="small-6">
        <%= render :partial => "form", :locals => { :f => f } %>
        <div class="small-6">
          <%= f.submit t("forem.post.buttons.reply"), class: "button tiny" %>
        </div>
      </div>
    <% end %>
  </div>
</div>