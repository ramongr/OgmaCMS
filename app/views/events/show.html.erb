<br>
<div class="row">
  <%= link_to t('events.name'), events_path, class: "button small" %>
  <%= link_to t('calendar.name'), calendar_index_path, class: "button small" %>

  <div class="small-12">
    <h1 class="text-center"><%= @event.title %></h1>
    <% unless @event.body.nil? %>
      <h4><%= t('events.attributes.body') %></h4>
      <p><%= @event.body %></p>
    <% end %>
    <h4><%= t('events.attributes.start_time') %>:</h4>
    <p><%= l @event.start_time, format: :full_date %></p>
    <% unless @event.end_time.nil? %>
      <h4><%= t('events.attributes.end_time') %>:</h4>
      <p><%= l @event.end_time, format: :full_date %></p>
    <% end %>
  </div>

  <%= render('going') %>
</div>