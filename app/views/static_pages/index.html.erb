<h1>Listing pages</h1>

<% unless @pages.empty? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= link_to 'Show', page %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
