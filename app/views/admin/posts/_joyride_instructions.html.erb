<div class="joyride-content">
  <ol id="joyride-defs" class="joyride-list" data-joyride>
    <li id="post-title" data-text=<%= t 'joyride.next' %> data-options="tip_location: top; prev_button: false">
      <p><%= t 'joyride.post.title' %></p>
    </li>  
    <li id="post-body" data-text=<%= t 'joyride.next' %> data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top;">
      <p><%= t 'joyride.post.body' %></p>
    </li>
    <li id="post-body" data-text="Ok" data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top;">
      <p><%= t 'joyride.post.attachments' %></p>
    </li> 
  </ol>
</div>