<h1>Listing admin_posts</h1>

<% unless @admin_posts.empty? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>User</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_posts.each do |admin_post| %>
        <tr>
          <td><%= admin_post.title %></td>
          <td><%= admin_post.content %></td>
          <td><%= admin_post.user.email %></td>
          <td><%= admin_post.date_created_human %></td>
          <td><%= admin_post.date_updated_human %></td>
          <td><%= link_to 'Show', [:admin,admin_post] %></td>
          <td><%= link_to 'Edit', edit_admin_post_path(admin_post) %></td>
          <td><%= link_to 'Destroy', [:admin,admin_post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New post', new_admin_post_path %>
