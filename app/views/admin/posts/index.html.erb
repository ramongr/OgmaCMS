<h1 class="text-center"><%= t('posts.index.admin.title') %></h1>

<div class="row">
  <%= link_to t('posts.index.admin.new'), new_admin_post_path, class: "button tiny" %>
  <div class="small-12">
    <% unless @posts.empty? %>
      <table>
        <thead>
          <tr>
            <th><%= t('posts.attributes.title') %></th>
            <th><%= t('posts.attributes.author') %></th>
            <th><%= t('posts.attributes.updated_at') %></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |admin_post| %>
            <tr>
              <td><%= admin_post.title %></td>
              <td><%= admin_post.user.name %></td>
              <td><%= l admin_post.updated_at %></td>
              <td>
                <%= link_to t('common.show'), [:admin,admin_post], class: "button tiny" %>
                <%= link_to t('common.edit'), edit_admin_post_path(admin_post), class: "button tiny" %>
                <%= link_to t('common.destroy'), [:admin,admin_post], method: :delete, data: { confirm: t('common.confirm') }, class: "button tiny alert" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
    
</div>