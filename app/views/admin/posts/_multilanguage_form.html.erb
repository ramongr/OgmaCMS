<ul class="tabs" data-tab>
  <% Setting.selected_languages.each_with_index do |l,index| %>
      <li class="tab-title <%= l.second == params[:locale] ? "active" : ""%>"><a href="#langtab<%= index %>"><%= l.first %></a></li>
  <% end %>
</ul>

<%= form_for([:admin,@admin_post]) do |f| %>
  <% if @admin_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_post.errors.count, "error") %> prohibited this admin_post from being saved:</h2>

      <ul id="post-error-message">
        <% @admin_post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tabs-content"> 
    <% Setting.selected_languages.each_with_index do |l, index| %>
      
      <%= content_tag :div, class: "content "+ (index == 0 ? "active": ""), id: "langtab"+index.to_s do %> 
      
        <% title_locale = ("title_" + l.second).to_sym %>
        <% content_locale = ("content_" + l.second).to_sym %>
        <div id="post_title" class="field">
          <%= f.label title_locale %>
          <%= f.text_field title_locale %>
        </div>
        <div id="post_body" class="field">
          <%= f.label content_locale %>
          <%= f.text_area content_locale, class: "ckeditor", input_html: { ckeditor: {toolbar: 'Full'} } %>
        </div>
        <br>
        <div id="insert-attachment">
          <button class="attachment-btn" id="insert-attachment-<%=l.second%>">Insert Attachement</button>
        </div>
      <% end %>

    <% end %>
    
    <div class="actions">
      <%= f.submit class: "button right" %>
    </div>
  </div>
<% end %>

<div id="dialog" title="Insert Attachment" style="display:none">
  <p class="validateTips">Select Attachment.</p>
  <ol id="selectable">
    <% @attachments.each do |attachment| %>
      <li class="ui-widget-content" data-attachment-link='"<%= download_attachment_url(attachment)%>"' data-attachment-type="<%= attachment.file_content_type %>" ><%= attachment.file_file_name %></li>
    <% end %>
  </ol>
</div>


<div id="joyride-content">
  <ol class="joyride-list" data-joyride>
    <li data-id="post_title" data-text="Next" data-options="tip_location: top; prev_button: false">
      <p>Enter the title of the Post.</p>
    </li>  
    <li data-id="post_body" data-text="Next" data-options="tip_location: top; prev_button: false">
      <p>Enter the body of the Post.</p>
    </li>
    <li data-id="insert-attachment" data-text="Ok" data-options="tip_location: top; prev_button: false">
      <p>Attachments can be loaded into the body using this button.</p>
    </li> 
  </ol>
</div>