<h1 class="text-center">Listing users</h1>

<div class="row">
  <div class="small-12">
    <%= link_to 'New User', new_admin_user_path, class: "button tiny" %>
    <br><br>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @admin_users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role.humanize %></td>
            <td><%= link_to 'Show', [:admin,user], class: "button tiny" %>
            <%= link_to 'Edit', edit_admin_user_path(user), class: "button tiny" %>
            <%= link_to 'Destroy', [:admin,user], method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny alert" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>