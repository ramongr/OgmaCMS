<p id="notice"><%= notice %></p>

<h1 class="text-center">User</h1>

<div class="row">
  <%= link_to 'All Users', admin_users_path, class: "button tiny" %>
  <%= link_to 'Edit User', edit_admin_user_path(@admin_user), class: "button tiny" %>
  <%= link_to 'Delete User', admin_user_path, method: :delete, data: {confirm: 'Are you sure?'}, class: "button tiny alert" %>
  <%= link_to 'Back', admin_users_path, class: "button tiny" %>
  <div class="small-12">
    <p><strong>Name:</strong> <%= @admin_user.name %></p>
    <p><strong>Email:</strong> <%= @admin_user.email %></p>
    <p><strong>Date of Birth:</strong> <%= @admin_user.dob %></p>
    <p><strong>Nationality:</strong> <%= @admin_user.nationality %></p>
    <p><strong>Gender:</strong> <%= @admin_user.gender %></p>
    <p><strong>Role:</strong> <%= @admin_user.role.humanize %></p>
  </div>
</div>