<br>
<div class="row">
  <div class="small-12">
    <%= link_to t('newsletters.name'), admin_newsletters_path, class: 'button small' %>
    <%= link_to t('common.edit'), edit_admin_newsletter_path(@newsletter), class: 'button small' %>

    <h1 class="text-center"><%= @newsletter.title %></h1>

    <% unless @newsletter.users.empty? %>
      <hr>
      <div>
        <strong><%= t('newsletters.to') %>:</strong>
        <% @newsletter.users.each do |user| %>
          <%= link_to user.email, [:admin,user] %><%= ', ' if user != @newsletter.users.last %>
        <% end %>
      </div>
    <% end %>

    <strong><%= t('newsletters.attributes.subject') %>:</strong> <%= @newsletter.subject %>
    <hr>
    <%= @newsletter.body.html_safe %>

    <div id="send_newsletter">
      <%= unless @newsletter.users.empty?
            link_to t('newsletters.send'), send_newsletter_admin_newsletter_path(@newsletter), remote: true, class: 'button small'
          else
            link_to t('newsletters.cant_send'), edit_admin_newsletter_path(@newsletter), class: 'button small alert'
          end
      %>
    </div>
</div>
