<h1 class="text-center">Listing newsletters</h1>

<div class="row">
  <%= link_to 'New newsletter', new_admin_newsletter_path, class: "button tiny" %>
  <div class="small-12">
    <% unless @newsletters.empty? %>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @newsletters.each do |newsletter| %>
            <tr>
              <td><%= newsletter.title %></td>
              <td>
                <%= link_to 'Show', [:admin,newsletter], class: "button tiny" %>
                <%= link_to 'Edit', edit_admin_newsletter_path(newsletter), class: "button tiny" %>
                <%= link_to 'Destroy', [:admin,newsletter], method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny alert" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
