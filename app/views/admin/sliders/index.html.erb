<h1>Listing Sliders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= slider.title %></td>
        <td><%= link_to 'Show', [:admin,slider] %></td>
        <td><%= link_to 'Edit', edit_admin_slider_path(slider) %></td>
        <td><%= link_to 'Destroy', [:admin,slider], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slider', new_admin_slider_path %>
