<%= form_for([:admin,@event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :all_day %><br>
    <%= f.check_box :all_day %>
  </div>
  <div class="actions">
    <%= f.submit "Confirm", class: "button small" %>
  </div>
<% end %>

<div id="joyride-content">
  <ol class="joyride-list" data-joyride>
    <li data-button="End" data-options="prev_button: false">
      <h4>Events and Calendar</h4>
      <p>You can create and manage Events in the calendar view! Go there and see that's easier to create or change an Event</p>
    </li>
  </ol>
</div>