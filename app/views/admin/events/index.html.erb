<h1 class="text-center">Listing events</h1>
<div class="row">
  <%= link_to 'New Event', new_admin_event_path, class: "button tiny" %>
  <%= link_to 'Calendar', calendar_index_path, class: "button tiny" %>
  <div class="small-12">
    <% unless @events.empty? %>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Start time</th>
            <th>End time</th>
            <th>All Day</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.body %></td>
              <td><%= event.start_time %></td>
              <td><%= event.end_time %></td>
              <td><%= event.all_day ? 'Yes' : 'No' %></td>
              <td><%= link_to 'Show', event, class: "button tiny" %></td>
              <td><%= link_to 'Edit', edit_admin_event_path(event), class: "button tiny" %></td>
              <td><%= link_to 'Destroy', [:admin,event], method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny alert" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
