  <% LANGUAGES.each_with_index do |l, index| %>
    <% if index == 0 %>
      <div class="content active" id="langtab0">
    <% else %>
      <div class="content" id="langtab<%= index %>">
    <% end %>
    <% I18n.locale = l.second %>
    <%= render "form" %>
    </div>
  <% end %>
</div>
