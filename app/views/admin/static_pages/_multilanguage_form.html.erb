<ul class="tabs" data-tab>
  <% Setting.selected_languages.each_with_index do |l,index| %>
    <li id="lang-tab" data-lang=<%= l.second %> class="tab-title <%= l.second == I18n.locale.to_s ? "active" : ""%>"><a href="#langtab<%= index %>"><%= l.first %></a></li>
  <% end %>
</ul>

<%= form_for([:admin,@admin_static_page]) do |f| %>
  <% if @admin_static_page.errors.any? %>
    <div id="error_explanation">
      <h4><%= t 'common.error_save', count: @admin_static_page.errors.count, model: StaticPage.model_name.human %></h4>
      <ul>
      <% @admin_static_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tabs-content"> 
    <% Setting.selected_languages.each_with_index do |l, index| %>
      
      <%= content_tag :div, class: "content "+ (l.second == I18n.locale.to_s ? "active" : ""), id: "langtab"+index.to_s do %> 
        <% title_locale = ("title_" + l.second).to_sym %>
        <% body_locale = ("body_" + l.second).to_sym %>
        <!-- Page name -->
        <%= content_tag :div, class: 'field', id: 'page-title-'+l.second do %>
          <%= f.label t('pages.attributes.title', locale: l.second) %>
          <%= f.text_field title_locale %>
        <% end %>
        <!-- Page slug -->
        <%= content_tag :div, class: 'field', id: 'page-slug-'+l.second do %>
          <%= f.label t('pages.attributes.slug', locale: l.second) %>
          <%= f.text_field :slug %>
        <% end %>
        <!-- Page body -->
        <%= content_tag :div, class: 'field', id: 'page-body-'+l.second do %>
          <%= f.label t('pages.attributes.body', locale: l.second) %>
          <%= f.text_area body_locale, class: "ckeditor", input_html: {ckeditor: {toolbar: 'Full'}} %>
        <% end %>
        <br>
        <!-- Attachment -->
        <%= content_tag :div, class: 'field', id: 'page-attachment-'+l.second do %>
          <button><%= t('common.insert_attachment', locale: l.second) %></button>
        <% end %>
      <% end %>
    <% end %>

    <div class="actions">
      <%= f.submit class: "button right" %>
    </div>
  </div>
<% end %>

<div id="dialog" title="<%= t('common.select_attachment') %>" style="display:none">
  <ol id="selectable">
    <% @attachments.each do |attachment| %>
      <li class="ui-widget-content" data-attachment-link='"<%= download_attachment_url(attachment)%>"' data-attachment-type="<%= attachment.file_content_type %>" ><%= attachment.file_file_name %></li>
    <% end %>
  </ol>
</div>


<!-- At the bottom of your page but inside of the body tag -->
<div id="pages-form" class="joyride-content">
  <ol id="joyride-defs" class="joyride-list" data-joyride>
    <li id="title" data-text=<%= t 'joyride.next' %> data-options="tip_location: top; prev_button: false">
      <p><%= t 'joyride.page.title' %></p>
    </li>  
    <li id="slug" data-text=<%= t 'joyride.next' %> data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top">
      <p><%= t 'joyride.page.slug' %></p>
    </li>
    <li id="body" data-text=<%= t 'joyride.next' %> data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top">
      <p><%= t 'joyride.page.body' %></p>
    </li>
    <li id="attachment" data-text="Ok" data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top">
      <p><%= t 'joyride.page.attachments' %></p>
    </li> 
  </ol>
</div>