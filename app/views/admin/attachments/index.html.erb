<h1>Listing attachments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Attachment</th>
      <th>Content type</th>
      <th>Uploaded by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.name %></td>
        <td><%= attachment.description %></td>
        <td><%= attachment.file_file_name %></td>
        <td><%= attachment.file_content_type %></td>
        <td><%= attachment.user.name %></td>
        <td><%= link_to 'Show', [:admin,attachment] %></td>
        <td><%= link_to 'Edit', edit_admin_attachment_path(attachment) %></td>
        <td><%= link_to 'Destroy', [:admin,attachment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attachment', new_admin_attachment_path %>
