<%= form_for([:admin,@attachment],html: { multipart: true }) do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h4><%= t 'common.error_save', count: @attachment.errors.count, model: Attachment.model_name.human %></h4>

      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="attachment-name" class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div id="attachment-description" class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 4 %>
  </div>
  <%= f.file_field :file %>
  <div id="attachment-file" class="actions">
    <%= f.submit class: "button right" %>
  </div>
<% end %>


<div id="joyride-content">
  <ol class="joyride-list" data-joyride>
    <li data-id="attachment-name" data-text=<%= t 'joyride.next' %> data-options="tip_location: top; prev_button: false">
      <p><%= t 'joyride.attachment.name' %></p>
    </li>  
    <li data-id="attachment-description" data-text=<%= t 'joyride.next' %> data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top">
      <p><%= t 'joyride.attachment.description' %></p>
    </li>
    <li data-id="attachment-file" data-text="Ok" data-prev-text=<%= t 'joyride.prev' %> data-options="tip_location: top">
      <p><%= t 'joyride.attachment.file' %></p>
    </li>
  </ol>
</div>
