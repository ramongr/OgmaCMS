<h1 class="text-center"><%= t('pages.index.admin.title') %></h1>

<div class="row">
  <%= link_to t('pages.index.admin.new'), new_admin_page_path, class: "button tiny" %>
  <div class="small-12">
    <% unless @admin_pages.empty? %>
      <table>
        <thead>
          <tr>
            <th><%= t('pages.attributes.title') %></th>
            <th><%= t('pages.attributes.slug') %></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @admin_pages.each do |admin_page| %>
            <tr>
              <td><%= admin_page.title %></td>
              <td><%= admin_page.slug %></td>
              <td>
                <%= link_to t('common.show'), [:admin,admin_page], class: "button tiny" %>
                <%= link_to t('common.edit'), edit_admin_page_path(admin_page), class: "button tiny" %>
                <%= link_to t('common.destroy'), [:admin,admin_page], method: :delete, data: { confirm: t('common.confirm') }, class: "button tiny alert" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>