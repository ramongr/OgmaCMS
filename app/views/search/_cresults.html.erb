<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<h1>Listing static_pages</h1>

  <% unless @static_pages.empty? %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @static_pages.each do |static_page| %>
          <tr>
            <td><%= static_page.title %></td>
            <td><%= static_page.slug %></td>
            <td><%= static_page.body %></td>
            <td><%= link_to 'Show', [:admin,static_page] %></td>
            <td><%= link_to 'Edit', edit_admin_static_page_path(static_page) %></td>
            <td><%= link_to 'Destroy', [:admin,static_page], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p> No Items found </p>
  <% end %>
  <br>


  <h1>Listing blogs</h1>

  <% unless @blogs.empty? %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>User</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= blog.user.email %></td>
            <td><%= blog.date_created_human %></td>
            <td><%= blog.date_updated_human %></td>
            <td><%= link_to 'Show', [:admin,blog] %></td>
            <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
            <td><%= link_to 'Destroy', [:admin,blog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p> No Items found </p>
  <% end %>

