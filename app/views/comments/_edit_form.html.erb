<%= form_for(@comment, data: {model: 'comment'}) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h4><%= t 'common.error_save', count: @comment.errors.count, model: Comment.model_name.human %></h4>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %>
    <%= f.cktext_area :content, ckeditor: {language: I18n.locale, toolbar: 'Comments'}%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "button right" %>
  </div>
<% end %>

<!-- Modal content -->
<%= render 'admin/emoji/emoji_modal' %>